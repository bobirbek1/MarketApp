<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="16dp"
    android:background="@color/pageBackgroundColor">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_sections"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/section_bg_grey"
        app:cardBackgroundColor="@color/pageBackgroundColor"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/v_section_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/iv_section_page"
            android:layout_gravity="center"
            android:src="@drawable/place_holder"
            android:contentDescription="@string/image" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_section_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        tools:text="Santexnika"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/cv_sections"
        app:layout_constraintStart_toStartOf="@id/cv_sections"
        app:layout_constraintTop_toBottomOf="@id/cv_sections" />

</androidx.constraintlayout.widget.ConstraintLayout>